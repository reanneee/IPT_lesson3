@model lecturevid2.Models.Login
@{
    <h2>Login Page</h2>
    <form asp-action="Login" method="post">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <label>Email:</label>
        <input asp-for="user_email" />
        <span asp-validation-for="user_email" class="text-danger" ></span>
        <label>Password:</label>
        <input asp-for="user_pwd" />
        <span asp-validation-for="user_pwd" class="text-danger" ></span>

        <button type="submit">Login</button>
    </form>
    <a asp-controller="Login" asp-action="Register">Register</a>
}
