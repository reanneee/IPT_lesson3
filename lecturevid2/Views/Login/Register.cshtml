@model lecturevid2.Models.User
@{
    <div class="container mt-4">
        <h2 class="text-center">Register Page</h2>
        <form asp-action="Register" method="post" class="w-50 mx-auto p-3 border rounded shadow-sm">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <label> Fullname:</label>
            <input asp-for="user_fullname" />
            <span asp-validation-for="user_fullname" class="alert-danger"></span>

            <label> Email:</label>
            <input asp-for="user_email" />
            <span asp-validation-for="user_email" class="alert-danger"></span>

            <label>Password:</label>
            <input asp-for="user_pwd" />
            <span asp-validation-for="user_pwd" class="alert-danger"></span>
            <input type="submit" class="btn btn-success" value="Register" />

        </form>
    </div>
}
