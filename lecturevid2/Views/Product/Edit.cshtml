@model lecturevid2.Models.ProductModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>ProductModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="prod_id" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="prod_name" class="control-label"></label>
                <input asp-for="prod_name" class="form-control" />
                <span asp-validation-for="prod_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="prod_price" class="control-label"></label>
                <input asp-for="prod_price" class="form-control" />
                <span asp-validation-for="prod_price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
